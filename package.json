{
  "name": "based.css",
  "version": "1.1.0",
  "description": "Based CSS framework",
  "repository": "https://github.com/bitmap/based.css",
  "scripts": {
    "build": "npm run sass && npm run postcss && npm run cssnano && npm run docs",
    "sass": "node-sass src/based.scss dist/based.css",
    "postcss": "postcss --use autoprefixer pixrem css-mqpacker -o dist/based.css dist/based.css",
    "cssnano": "cssnano dist/based.css dist/based.min.css",
    "docs": "cp dist/based.css docs/assets/"
  },
  "author": "Cabe Branson",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^7.2.6",
    "css-mqpacker": "^6.0.2",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.9.3",
    "pixrem": "^3.0.2",
    "postcss-cli": "^4.1.1"
  }
}
